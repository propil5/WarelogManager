                    <MudText>@product.Name</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Add to basket</MudButton>
                </MudCardActions>
            </MudCard>
        }
    </MudGrid>

